    <table id="datatablesSimple" class="table">
        <tr >

            <th>Product Id</th>
            <th>Product Name</th>
            <th>Category Id</th>
            <th>Category Name</th>
            @*<th>Delete/Update</th>*@


        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.DisplayFor(modelItem => item.Product_Id)
                </td>
