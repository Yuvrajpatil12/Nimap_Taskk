                    @Html.DisplayFor(modelItem => item.Product_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoty_Name)
                </td>

                @*<td>
                    @Html.ActionLink("Edit", "EditData", new { id = item.Product_Id }) |
                    @Html.ActionLink("Delete", "DeleteData", new { id = item.Product_Id })
